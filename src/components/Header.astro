---
import HeaderLink from './HeaderLink.astro';
import ThemeToggler from "../components/ThemeToggler.astro"
import { SITE_TITLE, SITE_GITHUB, SITE_LINKEDIN, SITE_NOTION_STUDY } from '../consts';
---

<header>
	<nav>
		<div class="blog-home">

			<a href="/" target="_blank" class="flex items-center">
				<span class="sr-only">Goto Blog Main!</span>
